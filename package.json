{
  "name": "video-looper",
  "version": "1.0.0",
  "description": "A web application for creating seamless video loops",
  "private": true,
  "scripts": {
    "start:client": "cd client && npm run dev",
    "start:server": "cd server && npm run dev",
    "dev": "concurrently \"npm run start:client\" \"npm run start:server\"",
    "build": "cd client && npm install && npm run build"
  },
  "dependencies": {
    "express": "^4.18.2",
    "ffmpeg-static": "^5.1.0",
    "ffprobe-static": "^3.1.0",
    "multer": "^1.4.5-lts.1",
    "nanoid": "^3.3.6"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "concurrently": "^8.2.2",
    "typescript": "^5.8.3"
  }
}
