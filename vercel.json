{
  "version": 2,
  "buildCommand": "cd client && npm install && npm run build",
  "outputDirectory": "client/dist",
  "installCommand": "npm install",
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/client/dist/$1" }
  ],
  "functions": {
    "api/**/*": {
      "memory": 1024,
      "maxDuration": 60
    }
  }
}
